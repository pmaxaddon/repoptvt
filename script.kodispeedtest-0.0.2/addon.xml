<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.kodispeedtest"
       name="Kodi SpeedTester Addon"
       version="0.0.2"
       provider-name="Speedtest.net">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.script"
             library="default.py">
        <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Kodi Speed Tester</summary>
    <description lang="en"> powered by speedtest.net will give you accurate Internet speed/ping test results.</description>
    <platform>all</platform>
  </extension>
</addon>
